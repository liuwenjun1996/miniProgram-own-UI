/* CSS书写顺序 
  1.位置属性(position, top, right, z-index, display, float等)
  2.大小(width, height, padding, margin)
  3.文字系列(font, line-height, letter-spacing, color- text-align等)
  4.背景(background, border等)
  5.其他(animation, transition等) 
*/
/* own-item */
.own-item {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 60rpx;
  padding: 0 20rpx;
  margin: 0;
  font-size: 28rpx;
  color: #333;
  text-decoration: none;
  text-align: initial;
  background-color: #fff;
  border-bottom: 2rpx solid #f6f8f9;
  box-sizing: border-box;
  word-wrap: break-word;
}

.own-item .own-item-inner {
  position: relative;
  margin: 20rpx 0;
  /* padding: 0 10rpx; */
  flex: 1;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
}
.own-item .own-item-start {
  margin: 20rpx 20rpx 20rpx 0;
}
.own-item .own-item-end {
  margin: 20rpx 0 20rpx 20rpx;
}
.own-item .own-item-link {
  position: absolute;
  right: 6rpx;
}

.own-item,
.own-item .own-item-inner,
.own-item .own-item-link {
  box-sizing: border-box;
}


/* 栅格布局 */
.own-row {
  display: flex;
  flex-wrap: wrap;
}

.row.text-center>.own-col {
  text-align: center;
}

.own-col {
  position: relative;
  margin: 0;
  padding: 10rpx;
  flex-grow: 1;
  flex-basis: 0;
  -webkit-box-flex: 1;
  max-width: 100%;
}

