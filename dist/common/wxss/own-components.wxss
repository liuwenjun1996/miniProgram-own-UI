/* 按钮类 */
.button {
  font-size: 28rpx;
  margin: 0;
  padding: 0 40rpx;
  display: inline-block;
  text-align: center;
  border-radius: 0;
  font-weight: normal;
  line-height: 2.55555556;
}

.button:not([size='mini']) {
  width: auto;
}

.button::after {
  border: none;
}

.button.lg {
  font-size: 32rpx;
  padding: 0 50rpx;
}

.button.sm {
  font-size: 26rpx;
  padding: 0 30rpx;
}

.button.xs {
  font-size: 22rpx;
  padding: 0 20rpx;
}

.button.full {
  display: block;
  width: 100%;
  margin: 0;
}

.button.round {
  border-radius: 50rpx;
}

.button.round:after,
.button.clear:after {
  border: none;
}

.button.clear {
  color: #333 !important;
  background: transparent !important;
  box-shadow: none;
}

.button.outline {
  background: transparent;
  border-style: solid;
  border-width: 2rpx;
}

.button.cancel {
  background: #F5F9FC;
  color: #666;
}

/** 卡片 **/
.own-card {
  margin: 20rpx;
  width: calc(100% - 40rpx);
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  overflow: hidden;
}
.own-card.shadow {
  box-shadow: 0rpx 10rpx 30rpx 2rpx #e4e4e4;
}

/** 列表 **/
.own-list {
  list-style-type: none;
  box-sizing: border-box;
}
.own-list-header {
  padding: 20rpx;
  font-size: 26rpx;
  color: #666;
}

/** popup **/
.own-center-popup-container {
  padding: 30rpx 20rpx;
  background: #fff;
  border-radius: 10rpx;
}

.own-center-popup--title {
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
}

.own-center-popup--input {
  background: #f8f8f8;
  font-size: 30rpx;
  padding: 16rpx 10rpx;
  border-radius: 10rpx;
}