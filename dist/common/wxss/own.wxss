  text-align: right;
}

.text-left {
  text-align: left;
}
.block {
  display: block !important;
}
.line-block {
  display: inline-block;
}
/* 线条 */
.border-top {
  border-top: 1px solid #f6f8f9;
}

.border-bottom {
  border-bottom: 1px solid #f6f8f9;
}
.no-line {
  border: none !important;
}
.no-bg {
  background-color: transparent !important;
}

.singleRow {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: block;
}
/* 基本布局 */
.container {
  width: 100%;
  height: 100%;
}

.global-header {
  position: fixed;
  width: 100%;
  height: 88rpx;
  left: 0;
  top: 0;
  z-index: 50;
  transition: all 0.3s;
  background: #fff;
}

.global-container {
  padding-top: 90rpx;
}

.global-footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  left: 0;
  z-index: 10;
  background: #fff;
  border-top: 1px solid #e4eff1;
}

