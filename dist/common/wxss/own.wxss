/* 字体 */
/* 超大字体 */
.lg-font {
  font-size: 48rpx;
}

.slg-font {
  font-size: 36rpx;
}
.lmd-font {
  font-size: 30rpx;
}
/* 默认字体 */
.md-font {
  font-size: 28rpx;
}

/* 小字体 */
.sm-font {
  font-size: 26rpx;
}

/* 超小字体 */
.xs-font {
  font-size: 24rpx;
}

.normal-font {
  font-weight: normal;
}

.bold {
  font-weight: bold;
}

.text-center {
  text-align: center;
}

